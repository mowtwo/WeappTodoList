page {
    background-color: #eee;
}

.create__title {
    background-color: #fff;
    padding: 20rpx 40rpx;
}

.create__content {
    background-color: #fff;
    padding: 20rpx 40rpx;
    margin-top: 20rpx;
}

.create__content-area {
    border-bottom: #eee solid 1rpx;
}

.create__content-showCount {
    text-align: right;
    font-size: 24rpx;
    color: #aaa;
    padding-top: 20rpx;
}

.create__save {
    padding: 20rpx 0;
}

.create__picture {
    display: flex;
    flex-wrap: wrap;
    padding: 10rpx;
}

.create__picture-block {
    width: 200rpx;
    height: 200rpx;
    background-color: #fff;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10rpx;
}

.create__picture-block:not(:last-child) {
    margin-right: 10rpx;
}

.create__picture-choose {
    font-size: 26rpx;
    font-weight: bold;
    color: #aaa;
}