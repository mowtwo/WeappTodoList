page {
    background-color: #eee;
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.title {
    font-size: 50rpx;
    font-weight: bold;
    padding: 10rpx 40rpx;
}

.todo {
    background-color: #fff;
    margin-top: 20rpx;
    flex: 1;
    overflow: hidden;
}

.todo__scroll {
    height: 100%;
}

.todo__empty {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    font-weight: bold;
    color: #aaa;
}

.todo__item {
    display: flex;
    padding: 20rpx 40rpx;
    align-items: center;
}

.todo__item:not(:last-child) {
    border-bottom: rgb(187, 187, 187) solid 1rpx;
}

.todo__content {
    flex: 1;
    margin-left: 10rpx;
}

.todo__content.todo__content-finished {
    color: #aaa;
    text-decoration: line-through;
}

.todo__remove {
    color: red;
    padding: 10rpx 20rpx;
}

.todo__remove:active {
    color: rgb(158, 60, 60);
}

.create {
    padding: 20rpx 0;
}